{
  "manifest_version": 2,
  "name": "Request Security Info",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": {
      "32": "icons/icon-32.png"
    },
    "default_title": "Request Security Info",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "32": "icons/icon-32.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "62.0"
    }
  }
}